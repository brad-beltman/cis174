@using AssignmentsApp.Areas.Module6.Session

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
    <body>
        <div class="container">
            <header class="text-center text-white">
                <h1 class="bg-primary mt-3 p-3">Olympic Teams</h1>
                @if (TempData["message"] != null)
                {
                    <h4 class="bg-success p-2">@TempData["message"]</h4>
                }

                @if (!ViewContext.View.Path.Contains("Favorites"))
                {
                    var session = new OlympicSession(Context.Session);
                    <h5 class="bg-info p-2">
                        <a asp-controller="Favorites"
                           class="text-white">My Favorite Teams</a>
                        <span class="badge badge-light">
                            @(session.GetMyCountriesCount())
                        </span>
                    </h5>
                }
            </header>
            <main>
                @RenderBody()
            </main>
        </div>
    </body>
</html>