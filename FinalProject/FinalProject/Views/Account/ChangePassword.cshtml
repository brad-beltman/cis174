@model ChangePasswordViewModel
@{ 
    ViewBag.Title = "Change Password";
}

<h1>Change Password</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-action="ChangePassword">
    <div class="form-group row">
        <div class="col-sm-2"><label>Old Password:</label></div>
        <div class="col-sm-4">
            <input asp-for="OldPassword" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>New Password:</label></div>
        <div class="col-sm-4">
            <input type="password" asp-for="NewPassword" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Confirm Password:</label></div>
        <div class="col-sm-4">
            <input type="password" asp-for="ConfirmPassword" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Change Password</button>
            <a asp-controller="Home" asp-action="Index">Go Back</a>
        </div>
    </div>
</form>
